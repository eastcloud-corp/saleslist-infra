# Django Development Environment Variables
DEBUG=True
DJANGO_SETTINGS_MODULE=saleslist_backend.settings

# Database Configuration
DB_HOST=db
DB_NAME=saleslist_dev
DB_USER=saleslist_user
DB_PASSWORD=saleslist_password
DB_PORT=5432

# Celery
CELERY_BROKER_URL=redis://redis:6379/2
CELERY_RESULT_BACKEND=redis://redis:6379/3
CELERY_TASK_TIME_LIMIT=1800

# Security (Development only - not for production)
SECRET_KEY=django-dev-secret-key-for-local-development-only
ALLOWED_HOSTS=localhost,127.0.0.1,backend,saleslist_backend

# CORS Configuration (Permissive for development)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3002,http://127.0.0.1:3000
CORS_ALLOW_ALL_ORIGINS=True

# Cache Configuration
REDIS_URL=redis://redis:6379/1

# JWT Configuration
JWT_ACCESS_TOKEN_LIFETIME_HOURS=24
JWT_REFRESH_TOKEN_LIFETIME_DAYS=30

# Logging
LOG_LEVEL=DEBUG

# Internationalization
LANGUAGE_CODE=ja
TIME_ZONE=Asia/Tokyo

# Throttle configuration (relaxed for development/testing)
DRF_THROTTLE_LOGIN=200/min
DRF_THROTTLE_REFRESH=200/min

# Facebook Graph API
FACEBOOK_GRAPH_API_VERSION=v19.0
FACEBOOK_ACCESS_TOKEN=
FACEBOOK_GRAPH_API_TIMEOUT=10
FACEBOOK_SYNC_CHUNK_SIZE=500

